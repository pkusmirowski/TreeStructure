@model TreeStructure.VM.ErrorViewModel
@{
    ViewData["Title"] = "Błąd";
}

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Ups! Coś poszło nie tak.</h4>
    <p>Wystąpił błąd podczas przetwarzania Twojego żądania. Spróbuj ponownie później.</p>

    @if (Model.ShowRequestId)
    {
        <hr />
        <p class="mb-0"><strong>ID żądania:</strong> @Model.RequestId</p>
    }
</div>

<p>
    <a class="btn btn-primary" href="javascript:history.back()">Wróć do poprzedniej strony</a>
    <a class="btn btn-secondary" href="/">Przejdź na stronę główną</a>
</p>
