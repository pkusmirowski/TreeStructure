                                <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                                <input class="btn btn-primary" type="submit" value="Dodaj folder"/> 
                                </div>
                            </div>
                            </div>
                        </div>
                    </form>
                    <form asp-action="DeleteElement" method="post">
                    <!-- Modal Usuń-->
                    <div class="modal fade" id="deleteModal@(child.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
                        <div class="modal-content">
