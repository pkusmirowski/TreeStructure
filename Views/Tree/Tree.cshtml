                            </div>
                            <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal">Zamknij</button>
                            <input class="btn btn-primary" type="submit" value="Usuń"/> 
                            </div>
                        </div>
                        </div>
                    </div>
                    </form>
                    <form asp-action="EditElement" method="post">
                    <!-- Modal Edytuj-->
                    <div class="modal fade" id="editModal@(child.Id)" tabindex="-1" role="dialog" aria-labelledby="exampleModalCenterTitle" aria-hidden="true">
                        <div class="modal-dialog modal-dialog-centered" role="document">
